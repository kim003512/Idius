<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView

        android:layout_marginTop="7dp"
        android:id="@+id/nav_image_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/selector_bottom_navi_main_icon"
        app:layout_constraintEnd_toStartOf="@+id/nav_image_2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

            <TextView
                app:layout_constraintLeft_toLeftOf="@id/nav_image_1"
                app:layout_constraintRight_toRightOf="@id/nav_image_1"
                app:layout_constraintTop_toBottomOf="@id/nav_image_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="5sp"
                android:text="작품"
                android:textColor="#3b3b3b"
                android:textSize="10sp"/>

    <ImageView
        android:id="@+id/nav_image_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/selector_bottom_navi_class_icon"
        app:layout_constraintEnd_toStartOf="@+id/nav_image_3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/nav_image_1"
        app:layout_constraintTop_toTopOf="@id/nav_image_1"
        />
    <TextView
        app:layout_constraintLeft_toLeftOf="@id/nav_image_2"
        app:layout_constraintRight_toRightOf="@id/nav_image_2"
        app:layout_constraintTop_toBottomOf="@id/nav_image_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="5sp"
        android:text="금손클래스"
        android:textColor="#3b3b3b"
        android:textSize="10sp"/>

    <ImageView
        android:id="@+id/nav_image_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/search_icon"
        app:layout_constraintEnd_toStartOf="@+id/nav_image_4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/nav_image_2"
        app:layout_constraintTop_toTopOf="@id/nav_image_1"
        />
    <TextView
        app:layout_constraintLeft_toLeftOf="@id/nav_image_3"
        app:layout_constraintRight_toRightOf="@id/nav_image_3"
        app:layout_constraintTop_toBottomOf="@id/nav_image_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="5sp"
        android:text="검색"
        android:textColor="#3b3b3b"
        android:textSize="10sp"/>
    <ImageView
        android:id="@+id/nav_image_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/mypage_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/nav_image_3"
        app:layout_constraintTop_toTopOf="@id/nav_image_1"
        />
    <TextView
        app:layout_constraintLeft_toLeftOf="@id/nav_image_4"
        app:layout_constraintRight_toRightOf="@id/nav_image_4"
        app:layout_constraintTop_toBottomOf="@id/nav_image_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="5sp"
        android:text="내정보"
        android:textColor="#3b3b3b"
        android:textSize="10sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>