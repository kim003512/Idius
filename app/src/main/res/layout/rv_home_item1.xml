<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/rv_item1_item_img"
        android:layout_width="136dp"
        android:layout_height="225dp"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/best_selling_pottery_img"></ImageView>

    <ImageView
        android:id="@+id/rv_item1_logo_img"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rv_item1_item_img"
        android:src="@drawable/profile_7"/>

    <ImageView
        android:id="@+id/rv_item1_selector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/star_empty_icon"
        app:layout_constraintEnd_toEndOf="@+id/rv_item1_item_img"
        app:layout_constraintTop_toTopOf="@+id/rv_item1_item_img"></ImageView>

    <TextView
        android:id="@+id/rv_item1_logo_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="15.5dp"
        android:lineSpacingExtra="3sp"
        android:text="어텀브리즈"
        android:textColor="#443d3b"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/rv_item1_logo_img"
        app:layout_constraintTop_toBottomOf="@+id/rv_item1_item_img" />

    <TextView
        android:id="@+id/rv_item1_store_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="크루아네"
        android:layout_marginStart="8dp"
        android:layout_marginTop="1.5dp"
        app:layout_constraintStart_toEndOf="@+id/rv_item1_logo_img"
        app:layout_constraintTop_toBottomOf="@+id/rv_item1_logo_item_title"
        android:textSize="12sp"
        android:textColor="#9c9c9c"
        android:lineSpacingExtra="2sp" />
</androidx.constraintlayout.widget.ConstraintLayout>