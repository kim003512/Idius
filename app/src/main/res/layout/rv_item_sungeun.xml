<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="180dp"
    android:layout_height="230dp">
<RelativeLayout
    android:layout_width="158dp"
    android:layout_height="158dp"
    android:layout_marginLeft="16dp">
    <ImageView
        android:id="@+id/iv_class_title"
        android:layout_width="158dp"
        android:layout_height="158dp"
        app:srcCompat="@drawable/img_5" />

    <ImageView
        android:id="@+id/iv_class_selector"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="126dp"
        android:src="@drawable/star_empty_icon" />
</RelativeLayout>
    <RelativeLayout
        android:layout_width="158dp"
        android:layout_height="40dp"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="11.5dp"
        android:layout_marginBottom="37dp">

        <ImageView
            android:id="@+id/iv_class_profile"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/profile_7"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tv_class_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/iv_class_profile"
            android:fontFamily="@font/noto_sans_kr_medium_hestia"
            android:includeFontPadding="false"
            android:textSize="16sp"
            android:textColor="#443d3b"
            android:lineSpacingExtra="3sp"
            android:text="파운드케이크" />

        <TextView
            android:id="@+id/tv_class_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_below="@+id/tv_class_title"
            android:layout_toRightOf="@+id/iv_class_profile"
            android:fontFamily="@font/noto_sans_kr_regular_hestia"
            android:includeFontPadding="false"
            android:lineSpacingExtra="2sp"
            android:text="시루아네"
            android:textColor="#9c9c9c"
            android:textSize="12sp" />
    </RelativeLayout>


</LinearLayout>