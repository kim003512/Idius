<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="343dp"
    android:layout_height="227dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <ImageView
        android:id="@+id/imgRightCommand"
        android:layout_width="158dp"
        android:layout_height="157dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/imgLeftCommand"


        />

    <CheckedTextView
        android:id="@+id/ckRightCommandStar"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toTopOf="@id/imgRightCommand"
        app:layout_constraintStart_toStartOf="@id/imgRightCommand"
        android:layout_marginStart="130dp"
        android:layout_marginTop="8dp"
        android:checked="false"
        android:background="@drawable/selector_star"
        />

    <ImageView
        android:id="@+id/imgRightCommandStore"
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:layout_constraintStart_toStartOf="@id/imgRightCommand"
        app:layout_constraintTop_toBottomOf="@id/imgRightCommand"
        android:layout_marginTop="16dp"
        />

    <TextView
        android:id="@+id/txtRightCommandTitle"
        android:text="TempTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:lineSpacingExtra="3sp"
        android:textColor="#443d3b"
        app:layout_constraintStart_toEndOf="@id/imgRightCommandStore"
        app:layout_constraintTop_toBottomOf="@id/imgRightCommand"
        android:layout_marginTop="18dp"
        android:layout_marginStart="8dp"
        />
    <TextView
        android:id="@+id/txtRightCommandDesc"
        android:text="TempDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:lineSpacingExtra="2sp"
        android:textColor="#9c9c9c"
        app:layout_constraintStart_toStartOf="@id/txtRightCommandTitle"
        app:layout_constraintTop_toBottomOf="@id/txtRightCommandTitle"
        android:layout_marginTop="2dp"
        />


    <!-- Right Command Item -->
    <ImageView
        android:id="@+id/imgLeftCommand"
        android:layout_width="159dp"
        android:layout_height="158dp"
        android:layout_marginEnd="13dp"
        app:layout_constraintTop_toTopOf="@id/imgRightCommand"
        app:layout_constraintStart_toEndOf="@id/imgRightCommand"
        android:layout_marginStart="13dp"


        />

    <CheckedTextView
        android:id="@+id/ckLeftCommandStar"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toTopOf="@id/imgLeftCommand"
        app:layout_constraintStart_toStartOf="@id/imgLeftCommand"
        android:layout_marginStart="130dp"
        android:layout_marginTop="8dp"
        android:checked="false"
        android:background="@drawable/selector_star"
        />

    <ImageView
        android:id="@+id/imgLeftCommandStore"
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:layout_constraintEnd_toStartOf="@id/imgLeftCommand"
        app:layout_constraintTop_toBottomOf="@id/imgLeftCommand"
        android:layout_marginTop="16dp"


        />

    <TextView
        android:id="@+id/txtLeftCommandTitle"
        android:text="TempTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:lineSpacingExtra="3sp"
        android:textColor="#443d3b"
        app:layout_constraintStart_toEndOf="@id/imgLeftCommandStore"
        app:layout_constraintTop_toBottomOf="@id/imgLeftCommand"
        android:layout_marginTop="18dp"
        android:layout_marginStart="8dp"
        />
    <TextView
        android:id="@+id/txtLeftCommandDesc"
        android:text="TempDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:lineSpacingExtra="2sp"
        android:textColor="#9c9c9c"
        app:layout_constraintStart_toStartOf="@id/txtLeftCommandTitle"
        app:layout_constraintTop_toBottomOf="@id/txtLeftCommandTitle"
        android:layout_marginTop="2dp"
        />









</androidx.constraintlayout.widget.ConstraintLayout>